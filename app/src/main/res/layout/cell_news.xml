<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/m_8"
        android:elevation="@dimen/m_8"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m_5"
                    android:text="Title"
                    android:textColor="@color/colorBrown"
                    android:textSize="@dimen/t_16" />

                <TextView
                    android:id="@+id/tvPublisher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m_7"
                    android:layout_marginTop="@dimen/m_7"
                    android:text="Publisher"
                    android:textSize="@dimen/t_13" />

                <TextView
                    android:id="@+id/tvHostname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m_7"
                    android:text="Hostname"
                    android:textSize="@dimen/t_13" />

                <TextView
                    android:id="@+id/tvUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/m_7"
                    android:text="Url"
                    android:textSize="@dimen/t_13" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_10"
                android:layout_gravity="right"
                android:src="@drawable/ic_unselect" />
        </FrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>